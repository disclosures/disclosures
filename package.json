{
  "name": "disclosures",
  "version": "0.1.0",
  "description": "A collection of animated disclosure components for building accessible UIs",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bash scripts/build-site.sh",
    "build:core": "pnpm --filter @disclosures/core build",
    "build:docs": "pnpm --filter @disclosures/docs build",
    "test": "pnpm -r test",
    "dev": "pnpm --filter @disclosures/core build && cd packages/vanilla && python3 -m http.server 8000",
    "docs:dev": "pnpm --filter @disclosures/docs dev",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "packageManager": "pnpm@9.15.0"
}
